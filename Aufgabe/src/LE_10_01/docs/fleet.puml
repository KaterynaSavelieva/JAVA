@startuml
skinparam classAttributeIconSize 0

enum VehicleType {
  CAR
  TRUCK
  MOTORCYCLE
}

enum EnergyType {
  PETROL
  DIESEL
  ELECTRIC
  HYBRID
}

enum EnergyUnit {
  LITER
  KWH
}

enum LicenseCode {
  A
  B
  C
  BE
  CE
}

abstract class Person {
  - personId : int
  - name : String
  - email : String
  - phone : String
  - birthdate : LocalDate
}

class Employee {
  - employeeId : int
  - licenses : Set<LicenseCode>
  + addLicense(code : LicenseCode) : void
  + removeLicense(code : LicenseCode) : void
}

class License {
  - code : LicenseCode
  - description : String
}

abstract class Vehicle {
  - vehicleId : int
  - vehicleType : VehicleType
  - licensePlate : String
  - brand : String
  - productionYear : int
  - energyType : EnergyType
  - energyUnit : EnergyUnit
  - energyConsumption : BigDecimal
  - mileage : int
  - energyLevel : BigDecimal
  + drive(km : int) : void
  + refuelOrCharge(amount : BigDecimal) : void
}

class Car {
  - numberOfSeats : int
}

class Truck {
  - maxLoadKg : BigDecimal
}

class Motorcycle {
  - engineCapacityCcm : int
}

class VehicleDriverAssignment {
  - assignedFrom : LocalDate
  - assignedTo : LocalDate
  + isCurrent() : boolean
}

Person <|-- Employee

Vehicle <|-- Car
Vehicle <|-- Truck
Vehicle <|-- Motorcycle

Employee "1" o-- "0..*" License : has >
License "1" o-- "0..*" Employee : assigned to >

Vehicle "1" o-- "0..*" VehicleDriverAssignment : assignments >
Employee "1" o-- "0..*" VehicleDriverAssignment : assignments >
VehicleDriverAssignment "1" --> "1" Vehicle : vehicle
VehicleDriverAssignment "1" --> "1" Employee : driver

@enduml
